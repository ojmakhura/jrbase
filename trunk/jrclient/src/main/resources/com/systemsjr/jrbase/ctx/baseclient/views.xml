			<map>
				<entry key="item" value-ref="clearanceLevelVO"/>
				<entry key="itemForm" value-ref="clearanceLevelForm"/>
				<!-- entry key="itemTable" value-ref="clearanceLevelListTable"/-->
			</map>
		</property>
	</bean>
	
